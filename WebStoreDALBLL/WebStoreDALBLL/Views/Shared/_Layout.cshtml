<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/dropzone/dropzone.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Scripts/dropzone/dropzone.css" rel="stylesheet" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("WebStoreDALBLL", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav pull-right list-inline">
                    <li>
                        <a href="@Url.Action("BrowseCategories", "Home")">
                          Vis varer
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Handlevogn", "Home")">
                            <i class="glyphicon glyphicon-shopping-cart"> </i> Handlekurv
                        </a>
                    </li>
                    @if (Session["Bruker"] != null)
                    {


                        <li>
                            <strong class="navbar-text">
                                Du er logget inn som:
                                <!--Henter referanse til Kunde klassen for å kunne hente ut navn og kundenr til innlogget bruker-->
                                @{WebStoreDALBLL.Models.Kunde kunde = (WebStoreDALBLL.Models.Kunde)Session["Bruker"];}
                                @kunde.fornavn @kunde.etternavn - @kunde.id
                            </strong>
                        </li>
                        <li><a href="/Kunde/LoggUt">Logg ut</a></li>
                    }
                    else
                    {
                        <li><a href="/Kunde/LoggInn">Logg inn / Registrer deg</a></li>
                    }
                </ul>
               
            </div>
          
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
                <a href="@Url.Action("Index", "Admin")">adminpage</a>
            </div>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>